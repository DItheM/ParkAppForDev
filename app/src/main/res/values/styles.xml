<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="email">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_email_24</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableSize">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="password">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_lock_24</item>
        <item name="android:drawableRight">@drawable/ic_baseline_remove_red_eye_24</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableSize">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="profile_text_field">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableRight">@drawable/baseline_edit_24</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableSize">14dp</item>
    </style>

    <style name="view_profile_text_field">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="searchBar">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableRight">@drawable/baseline_search_24</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableSize">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="account_type">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_person_24</item>
        <item name="android:drawableRight">@drawable/baseline_arrow_drop_down_24</item>
        <item name="drawableTint">@color/placeholder_color</item>
        <item name="android:textColorHint">@color/placeholder_color</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="button">
        <item name="android:background">@color/text_edit_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/plusjakartasansbold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="header">
        <item name="android:textColor">@color/mid_black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/plusjakartasansmedium</item>
    </style>

    <style name="link">
        <item name="android:textColor">@color/link_color</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/plusjakartasansmedium</item>
    </style>

    <style name="google_button">
        <item name="android:width">10dp</item>
        <item name="android:height">10dp</item>
    </style>

    <style name="card">
        <item name="cornerRadius">10dp</item>
    </style>
</resources>